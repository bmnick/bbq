!!! 5
%html
	%head
		%title Big Bad Quotes
		= stylesheet_link_tag "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		.navbar
			.navbar-inner
				.container
					%a.brand(href="/")Big Bad Quotes
		.container
			- if flash[:error]
				.alert.alert-error
					= flash[:error]
			- if flash[:notice]
				.alert.alert-success
					= flash[:notice]
			= yield
